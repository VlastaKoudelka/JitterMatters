<setGameWidget>:
    orientation: 'vertical'    
    Carousel:
        id: carousel
        BoxLayout:
            orientation:'vertical'
            id: title
            RstDocument:
                source: 'title.rst'
                size_hint_y:0.95
            BoxLayout:
                orientation:'horizontal'
                size_hint_y:0.05
                Button:
                    size_hint_x: 0.5
                    width: self.height
                    text: 'Prev'
                    on_release: carousel.load_previous()
                    background_color: (0.5,0.5,1,1)
                Button:
                    size_hint_x: 0.5
                    width: self.height
                    text: 'Next'
                    on_release: carousel.load_next()
                    background_color: (0.5,0.5,1,1)
        BoxLayout:
            orientation:'vertical'
            id: slide1
            RstDocument:
                source: 'slide1.rst'
                size_hint_y:0.95
            BoxLayout:
                orientation:'horizontal'
                size_hint_y:0.05
                Button:
                    size_hint_x: 0.5
                    width: self.height
                    text: 'Prev'
                    on_release: carousel.load_previous()
                    background_color: (0.5,0.5,1,1)
                Button:
                    size_hint_x: 0.5
                    width: self.height
                    text: 'Next'
                    on_release: carousel.load_next()
                    background_color: (0.5,0.5,1,1)                
        BoxLayout:
            orientation:'vertical'
            id: slide2
            RstDocument:
                source: 'slide2.rst'
                size_hint_y:0.95
            BoxLayout:
                orientation:'horizontal'
                size_hint_y:0.05
                Button:
                    size_hint_x: 0.5
                    width: self.height
                    text: 'Prev'
                    on_release: carousel.load_previous()
                    background_color: (0.5,0.5,1,1)
                Button:
                    size_hint_x: 0.5
                    width: self.height
                    text: 'Next'
                    on_release: carousel.load_next()
                    background_color: (0.5,0.5,1,1)
        BoxLayout:
            id: game
            orientation: 'vertical'
            BoxLayout:
                id: boxGame2  
                size_hint_y:0.7
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: 0.3
                Label:
                    id: jitterLabel
                    text: 'Your JITTER = 0ms'
                    font_size: 35
                    size_hint_y:0.2
                Slider:
                    id: slide
                    orientation: 'horizontal'
                    min: 0
                    max: 1
                    step: 0.01
                    value: 0.5
                    size_hint_y:0.2
                BoxLayout:
                    size_hint_y: 0.2
                    orientation: 'horizontal'
                    Label:
                        text: '<-Synchronized'
                        font_size: 20
                    Label:
                        text: 'Raw->'
                        font_size: 20
                BoxLayout:
                    size_hint_y: 0.3
                    Button:
                        text: 'TAP HERE'
                        background_color: (0.5,0.5,1,1)
                        on_release: root.recallplot()
        FloatLayout:
            orientation:'vertical'
            id: slide3
            RstDocument:
                source: 'slide3.rst'
                size_hint: (1,0.95)
                pos_hint:{"top":1}
            BoxLayout:
                orientation:'horizontal'
                size_hint_y:0.05
                Button:
                    size_hint_x: 0.5
                    width: self.height
                    text: 'Prev'
                    on_release: carousel.load_previous()
                    background_color: (0.5,0.5,1,1)
                Button:
                    size_hint_x: 0.5
                    width: self.height
                    text: 'Next'
                    on_release: carousel.load_next()
                    background_color: (0.5,0.5,1,1)
            FloatLayout:
                Image:
                    source: 'aPowASSROrig.png'
                    size_hint: (0.4,0.4)
                    pos_hint: {"x":0,"y":0.1} 
            FloatLayout:
                Image:
                    source: 'PowASSRJitter_2ms.png'
                    size_hint: (0.4,0.4)
                    pos_hint: {"x":0.3,"y":0.1} 
            FloatLayout:
                Image:
                    source: 'PowASSRJitter_4ms.png'
                    size_hint: (0.4,0.4)
                    pos_hint: {"x":0.6,"y":0.1} 
        FloatLayout:
            id: slide4                       
            RstDocument:
                source: 'slide4.rst'
                size_hint: (1,0.95)
                pos_hint:{"top":1}
            BoxLayout:
                orientation:'horizontal'
                size_hint_y:0.05
                Button:
                    size_hint_x: 0.5
                    width: self.height
                    text: 'Prev'
                    on_release: carousel.load_previous()
                    background_color: (0.5,0.5,1,1)
                Button:
                    size_hint_x: 0.5
                    width: self.height
                    text: 'Next'
                    on_release: carousel.load_next()
                    background_color: (0.5,0.5,1,1)
            FloatLayout:
                Image:
                    source: 'synchroDevice.png'
                    size_hint: (0.5,0.5)
                    pos_hint: {"x":0.5,"y":0.2}
        Accordion:
            orientation: 'horizontal'
            AccordionItem:
                title: 'Load your profile'
                BoxLayout:
                    orientation: 'vertical'
                    FileChooserListView:
                        id: filechooser
                        size_hint_y: 0.9
                    BoxLayout:
                        size_hint_y: 0.1
                        orientation: 'horizontal'
                        Button:
                            text:'Load'
                            #center: self.parent.center TODO - center the button
                            size_hint: None, None
                            size: 75, 50
                            background_color: (0.5,1,0.5,1)   
                            on_release: root.load(filechooser.path, filechooser.selection)
            AccordionItem:
                title: 'Customize Setting'
                GridLayout:
                    cols: 4
                    Label:
                    Label:            
                        text: 'LSL'
                        font_size: 20
                    Label:
                        text: 'ECI'
                        font_size: 20
                    Label:
                        text: 'TTL'
                        font_size: 20
                    Label:
                        text: 'Screen sync'
                        font_size: 20
                    CheckBox:
                        id: LSLscrCheck
                    CheckBox:
                        id: ECIscrCheck
                    CheckBox:
                        id: TTLscrCheck
                    Label:
                        text: 'Audio sync'
                        font_size: 20
                    CheckBox:
                        id: LSLaudCheck
                    CheckBox:
                        id: ECIaudCheck
                    CheckBox:
                        id: TTLaudCheck
                    Label:
                        text: 'Response sync'
                        font_size: 20
                    CheckBox:
                        id: LSLresCheck
                    CheckBox:
                        id: ECIresCheck
                    CheckBox:
                        id: TTLresCheck
            AccordionItem:
                title: 'Checklist'
                Label:
                    id: checkList
                    text: 'a checklist loaded from your profile and test the settings...'
            AccordionItem:
                title:'Run'
                GridLayout:
                    cols: 3
                    Label:
                        text: 'LSL'
                        font_size: 20
                    Label:
                        text: 'ECI'
                        font_size: 20
                    Label:
                        text: 'TTL'
                        font_size: 20 
                    CheckBox:
                        active: False #LSLscrCheck.active or LSLaudCheck.active or LSLresCheck.active
                    CheckBox:
                        id: ECIcheck
                        active: False #ECIscrCheck.active or ECIaudCheck.active or ECIresCheck.active
                    CheckBox:
                        active: False #TTLscrCheck.active or TTLaudCheck.active or TTLresCheck.active                
                    Button:
                        text:'Connect'
                        background_color: (0.5,1,0.5,1)    
                    Button:
                        text:'Test'
                        background_color: (0.5,0.5,1,1)
                    Button:
                        id: btnExit
                        text: "Exit"
                        background_color: (1,0.2,0.2,1)                                           
                        

                        
